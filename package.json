{
	"name": "turbo-schedule",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/kiprasmel/turbo-schedule.git"
	},
	"workspaces": {
		"packages": [
			"common",
			"scraper",
			"database",
			"server",
			"client"
		],
		"nohoist": [
			"client/eslint",
			"client/eslint/**"
		]
	},
	"engines": {
		"node": ">= 11 < 14"
	},
	"scripts": {
		"postinstall": "patch-package",
		"setup": "     yarn install --frozen-lockfile --check-files &&                               yarn build",
		"setup:prod": "yarn install --frozen-lockfile --check-files && cross-env NODE_ENV=production yarn build:prod",
		"start": "yarn dev  # depends on `setup`",
		"test": "cross-env CI=true NODE_ENV=test lerna run test",
		"lint": "    yarn eslint . --ext js,jsx,ts,tsx",
		"lint:fix": "yarn eslint . --ext js,jsx,ts,tsx --fix",
		"build": "yarn purge:build && yarn build:all",
		"build:prod": "yarn purge:build && yarn build:all:prod",
		"serve": "yarn --cwd ./server/ serve",
		"purge": "yarn purge:all",
		"updts": "yarn lerna add typescript@latest --dev",
		"copy-prod-data": "bash ./database/copy-prod-data.sh",
		"-----": "-----",
		"watch:ts": "tsc -b -w",
		"watch:server": "yarn --cwd ./server/ watch:server",
		"watch:client": "yarn --cwd ./client start",
		"dev": "concurrently --raw --kill-others --names \"0: tsc,1: server,2: client\" \"yarn watch:ts\" \"yarn watch:server\" \"yarn watch:client\"",
		"deve": "cross-env DEBUG=turbo-schedule* yarn dev",
		"build:ts:normal": "yarn tsc -b -v",
		"build:ts:fallback": "npx --package typescript@latest tsc -b -v && echo \"\nUsed build:ts:fallback!\n\"",
		"build:ts": "yarn build:ts:normal || yarn build:ts:fallback",
		"build:client:prod": "cross-env NODE_ENV=production yarn --cwd ./client/ build",
		"build:server": "     yarn --cwd ./server/ build",
		"build:server:prod": "cross-env NODE_ENV=production yarn --cwd ./server/ build:prod",
		"build:all": "yarn cross-env-shell USE_FAKE_DATA_INSTEAD_OF_SCRAPING=1 \"yarn build:ts && yarn build:server\"",
		"build:all:prod": "cross-env NODE_ENV=production yarn build:ts && yarn build:client:prod && yarn build:server:prod",
		"docker:build": "cross-env USE_FAKE_DATA_INSTEAD_OF_SCRAPING=1 docker build -t kipras/turbo-schedule:latest .",
		"docker:login": "echo \"$DOCKERHUB_PASSWORD\" | docker login --username \"$DOCKERHUB_USERNAME\" --password-stdin",
		"docker:push": "docker push kipras/turbo-schedule:latest",
		"docker:deploy": "yarn docker:build && yarn docker:login && yarn docker:push",
		"docker:tag-version": "docker tag kipras/turbo-schedule:latest kipras/turbo-schedule:$LATEST_TAG",
		"docker:push-tagged-version": "docker push kipras/turbo-schedule:$LATEST_TAG",
		"docker:build:my-current-workspace": "cross-env USE_FAKE_DATA_INSTEAD_OF_SCRAPING=1 yarn build:prod && docker build -t kipras/turbo-schedule:$(git rev-parse HEAD)$VERSION_SUFFIX .",
		"docker:login:my-current-workspace": "docker login",
		"docker:push:my-current-workspace": "docker push kipras/turbo-schedule:$(git rev-parse HEAD)$VERSION_SUFFIX",
		"docker:complete-deploy:my-current-workspace": "bash ./deploy.sh \"$(git rev-parse HEAD)$VERSION_SUFFIX\"",
		"docker:deploy:my-current-workspace": "echo $VERSION_SUFFIX && yarn docker:build:commit && yarn docker:login:commit && yarn docker:push:commit && yarn docker:complete-deploy:commit && echo $(git rev-parse HEAD)$VERSION_SUFFIX",
		"purge:build": "npx rimraf ./client/build ./*/dist/ ./dist/ ./*/tsconfig.tsbuildinfo",
		"purge:modules": "npx rimraf ./*/node_modules/ ./node_modules/",
		"purge:all": "yarn purge:build & yarn purge:modules & echo \"Do NOT forget to re-setup: \n\nyarn setup\n\""
	},
	"dependencies": {},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "2.11.0",
		"@typescript-eslint/parser": "2.11.0",
		"babel-eslint": "10.0.3",
		"concurrently": "5.0.0",
		"cross-env": "7.0.2",
		"eslint": "6.x",
		"eslint-config-airbnb": "18.0.0",
		"eslint-config-prettier": "6.7.0",
		"eslint-config-sarpik": "0.2.4",
		"eslint-plugin-flowtype": "4.5.2",
		"eslint-plugin-html": "6.0.0",
		"eslint-plugin-import": "2.18.0",
		"eslint-plugin-jsx-a11y": "6.2.3",
		"eslint-plugin-monorepo": "0.2.1",
		"eslint-plugin-prettier": "3.0.1",
		"eslint-plugin-react": "7.14.2",
		"eslint-plugin-react-hooks": "2.3.0",
		"lerna": "3.18.4",
		"patch-package": "6.2.0",
		"postinstall-postinstall": "2.0.0",
		"prettier": "1.16.4",
		"rimraf": "3.0.0",
		"typescript": "4.3.5"
	}
}
